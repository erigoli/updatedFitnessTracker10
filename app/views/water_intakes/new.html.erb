<!-- This heading indicates the section for logging water intake -->
<h1>Log Water Intake</h1>

<!-- This form_with helper generates a form for logging water intake -->
<%= form_with(model: @water_intake, url: water_intakes_path, local: true) do |form| %>

  <!-- This label prompts the user to enter their water intake in gallons -->
  <%= form.label :gallons, "Enter Water Consumed (in cups):" %>

  <!-- This number_field generates an input field for entering the water intake -->
  <%= form.number_field :gallons, step: 0.01 %>

  <!-- This submit button allows the user to submit their water intake -->
  <%= form.submit "Add Water" %>

<% end %>
